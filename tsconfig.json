{
  "compilerOptions": {
    "typeRoots": ["./src/types", "./node_modules/@types"], // making the types recognize from @types folder
    "moduleResolution": "node", // added to make import work without extension
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS", // same in package.json as CommonJS
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true
  }
}
